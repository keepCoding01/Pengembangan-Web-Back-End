<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Inventory</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto p-6">
      <h1 class="text-4xl font-bold mb-6">Product Inventory</h1>

      <table class="table-auto w-full border-collapse mb-6">
        <thead>
          <tr class="bg-gray-200">
            <th class="px-4 py-2 border">ID</th>
            <th class="px-4 py-2 border">Name</th>
            <th class="px-4 py-2 border">Description</th>
            <th class="px-4 py-2 border">Price</th>
            <th class="px-4 py-2 border">Quantity</th>
            <th class="px-4 py-2 border">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
          <tr class="text-center">
            <td class="px-4 py-2 border"><%= product.id %></td>
            <td class="px-4 py-2 border"><%= product.name %></td>
            <td class="px-4 py-2 border"><%= product.description %></td>
            <td class="px-4 py-2 border"><%= product.price %></td>
            <td class="px-4 py-2 border"><%= product.quantity %></td>
            <td class="px-4 py-2 border">
              <!-- Form untuk delete produk tanpa input -->
              <form action="/delete?_method=DELETE" method="POST" class="inline">
                <input type="hidden" name="id" value="<%= product.id %>" />
                <button type="submit" class="bg-red-500 text-white px-4 py-2">Delete</button>
              </form>
              <br />
              <!-- Form untuk update produk -->
              <form action="/update?_method=PUT" method="POST" class="inline">
                <input type="hidden" name="id" value="<%= product.id %>" />
                <input type="text" name="name" value="<%= product.name %>" class="px-2 py-1" />
                <input type="text" name="description" value="<%= product.description %>" class="px-2 py-1" />
                <br />
                <input type="number" name="price" value="<%= product.price %>" class="px-2 py-1" />
                <input type="number" name="quantity" value="<%= product.quantity %>" class="px-2 py-1" />
                <br />
                <button type="submit" class="bg-yellow-500 text-white px-4 py-2">Update</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <!-- Form untuk menambah produk -->
      <h2 class="text-2xl font-semibold mb-4">Add New Product</h2>
      <form action="/add" method="POST" class="space-y-4">
        <input type="text" name="name" placeholder="Product Name" class="p-2 w-full border border-gray-300" />
        <textarea name="description" placeholder="Description" class="p-2 w-full border border-gray-300"></textarea>
        <input type="number" name="price" placeholder="Price" class="p-2 w-full border border-gray-300" />
        <input type="number" name="quantity" placeholder="Quantity" class="p-2 w-full border border-gray-300" />
        <button type="submit" class="bg-blue-500 text-white px-4 py-2">Add Product</button>
      </form>
    </div>
  </body>
</html>
